{
  "name": "Postory",
  "version": "0.1",
  "description": "Postory extension - track packages",
  "permissions": ["storage", "notifications"],
  "background": {
    "scripts": ["poll.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://www.fedex.com/apps/fedextrack/?*"],
      "js": ["fedex.js"]
    },
    {
      "matches": ["*://www.ups.com/track?*"],
      "js": ["ups.js"]
    },
    {
      "matches": ["*://tools.usps.com/go/TrackConfirmAction?*"],
      "js": ["usps.js"]
    },
    {
      "matches": ["*://www.dhl.com/*/express/tracking.html?*"],
      "js": ["dhl.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
